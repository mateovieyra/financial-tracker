<h1>My Portfolio</h1>

<div class="search-area mb-3">
  <h3>Search Friends</h3>
  <%= form_with(url: search_friend_path, method: :get) do |f| %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= f.text_field :friend, placeholder: "Enter name or email", autofocus: true, class: "form-control form-control-lg"%>
      </div>
      <div class="col-sm-3">
        <%= f.submit "Search", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "friends/result" %>

<% if !@my_friends.empty? %>
  <%= render 'friends/list' %>
<% end %>